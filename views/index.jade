doctype html
html(lang='en', data-ng-app="nm-sandbox")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='description', content='')
        meta(name='author', content='')
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
        title Sandbox
        link(rel="stylesheet", type="text/css", href="lib/bootstrap/dist/css/bootstrap.css")
        link(rel="stylesheet", type="text/css", href="css/main.css")

        script(src="lib/jquery/dist/jquery.min.js")
        script(src="lib/bootstrap/dist/js/bootstrap.min.js")
        script(src="lib/angular/angular.min.js")
        script(src="lib/angular-route/angular-route.min.js")
        script(src="js/app.js")

        script#add-page(type="text/ng-template")
            include pages/add
        script#members-page(type="text/ng-template")
            include pages/members
        script#about-page(type="text/ng-template")
            include pages/about
        script#contact-page(type="text/ng-template")
            include pages/contact

    body
        // Fixed navbar
        .navbar.navbar-default.navbar-fixed-top(role='navigation', ng-controller="menuController")
            .container
                .navbar-header
                    a.navbar-brand(href='/home') Sandobox Website
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li(ng-repeat='route in sbRoutes', ng-class="{active: $route.current.title == route.title}")
                            a(ng-href='/{{route.name}}') {{route.title}}
        //Container
        #main-ctn(data-ng-view)
